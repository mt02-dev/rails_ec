<%= form_with model: [:admin, @product]  do |f|  %>
  <%= render partial: 'shared/error_messages', object: @product %>
  <%= f.label :name, class: "mt-3" %>
  <%= f.text_field :name, class: "form-control mb-3" %>
  <%= f.label :price %>
  <%= f.number_field :price, class: "form-control mb-3" %>
  <%= f.label :description %>
  <%= f.text_area :description, class: "form-control mb-3" %>
  <%= f.label :product_image %>
  <%= f.file_field :product_image, class: "form-control mb-3" %>
  <%= f.submit yield(:button_text), direct_upload: true, class: "btn btn-secondary " %>
<% end %> 
