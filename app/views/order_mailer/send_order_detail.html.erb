<h1>Purchase Reciept</h1>
<p>Order No.<%= @order.id %></p>
<!-- <p>Date: <%= @order.created_at.strftime("%Y/%m/%d") %></p> -->
<p>Date: <%= date_format(@order.created_at) %></p>
<p>Buyer Name: <%= "#{@order.first} #{@order.last}" %></p>
<p class="small text-muted mb-1">Shipping Address</p>
<p>Country: <%= @order.country %></p>
<p>State: <%= @order.state %></p>
<p>Zip: <%= @order.zip %></p>
<p>Address: <%= "#{@order.address1} #{@order.address2}" %></p>
<h3>Purchase Products</h3>
<% @order.order_details.each do |order_product| %>
  <p><%=" #{order_product.product_name} ¥#{order_product.price} Quantity: #{order_product.quantity}"%></p>
<% end %>
<div class="row" >
  <span class="text-success">Promotin code<span>
  <span>- ¥<%= @order.discounted_price %></span>
</div>
<p>Payment Method: <%= payment_methods_display(@order.payment_methods) %></p>
<p>Billing Amount: <%= "¥#{@order.billing_amount}" %></p>
