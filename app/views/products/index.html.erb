<%= render partial: 'application/navigation' %>
<%= render partial: 'application/header' %>
<!-- Section-->
<section class="py-5">
  <div class="container px-4 px-lg-5 mt-5">
    <% flash.each do |message_type, message| %>
      <%= content_tag(:div, message, class: "alert alert-#{message_type}")%> 
    <% end %>
    <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
      <% @products.each do |product| %>
        <div class="col mb-5">
          <div class="card">
            <!-- Product image-->
            <%= image_tag product.product_image.variant(resize: "300x300^", gravity: "center", crop: "300x300+0+0") %>
            <!-- Product details-->
            <div class="card-body p-4">
              <div class="text-center">
                <!-- Product name-->
                <h5 class="fw-bolder"><%=link_to product.name, product_path(product), class: "text-secondary" %></h5>
                <!-- Product price-->
                <%= "#{product.price}å††"%>
              </div>
            </div>
            <!-- Product actions-->
            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
              <div class="text-center">
                <%= button_to "Add to Cart", carts_path, params: { location: "index", product_id: product.id, quantity: 1 }, class: "btn btn-outline-dark mt-auto" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
